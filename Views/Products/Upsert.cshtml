@model Project_3r.Models.Product
@{
    ViewBag.Title = "Add or Edit Product";
}

<h2>Add or Edit Product</h2>

@using (Html.BeginForm("Upsert", "Products", FormMethod.Post))
{
    <p>
        Please add or edit the product information below. When you are finished, click the Submit button to
        save.
    </p>
    <div class="formArea">
        <div class="row">
            <div class="col-md-3">
                <span>Product Code</span>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.ProductCode, new { @class = "form-control required" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <span>Description</span>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.Description, new { @class = "form-control required" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <span>Unit Price</span>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.UnitPrice, new { @class = "form-control required" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <span>Quantity on Hand</span>
            </div>
            <div class="col-md-9">
                @Html.TextBoxFor(p => p.OnHandQuantity, new { @class = "form-control required" })
            </div>
        </div>

    </div>

    <input type="submit" value="Submit" class="btn btn-info" onclick="return CurrentPage.Check()" />
}
<p class="caution">
    Note: All fields must be filled, or the product will not be saved.
</p>